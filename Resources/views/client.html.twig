{% macro websocket_client(token, debug) %}
    {% spaceless %}
        {% if debug is not defined %}{% set debug = false %}{% endif %}
        {% javascripts '@p2_ratchet_js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript">
            var p2_ratchet_access_token = '{{ token }}';
            Ratchet.debug = {{ debug ? 'true' : 'false' }};
        </script>
    {% endspaceless %}
{% endmacro %}
